# AgentLens Cloud â€” Environment Variables
# Copy to .env and edit as needed: cp .env.example .env

# --- Database ---
DATABASE_URL=postgresql://agentlens:agentlens@postgres:5432/agentlens
REDIS_URL=redis://redis:6379
STORAGE_BACKEND=postgres        # postgres | sqlite

# --- Auth ---
AUTH_DISABLED=true               # Set to false in production
JWT_SECRET=                      # Required when AUTH_DISABLED=false

# --- Stripe (billing, optional) ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- Server ---
PORT=3000
BACKPRESSURE_THRESHOLD=1000      # Max queued events before back-pressure
